bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# open file manager
bindsym $mod+u exec nemo

# Next workspace only on the current monitor
bindsym $mod+Tab focus output current; workspace next_on_output
# Previous workspace only on the current monitor
bindsym $mod+Shift+Tab focus output current; workspace prev_on_output

# Next workspace on all monitors using left right arrow keys
bindsym $mod+Up workspace next
bindsym $mod+Down workspace prev

# Current monitor workspaces using up down arrow keys
bindsym $mod+Left workspace prev_on_output
bindsym $mod+Right workspace next_on_output

